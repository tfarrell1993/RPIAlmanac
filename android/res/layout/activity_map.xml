<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Map" >

	 <fragment
	     android:id="@+id/map"
	     android:layout_width="match_parent"
	     android:layout_height="match_parent"
	     android:name="com.google.android.gms.maps.MapFragment"/>
	 
	 <Button
	     android:id="@+id/addLocation"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignParentBottom="true"
	     android:layout_alignParentStart="true"
	     android:layout_alignParentLeft="true"
	     android:text="@string/addLocation"
	     android:textSize="12sp"
	     android:visibility="gone"
	     android:onClick="addNewLocation"/>
	 
	 <Button
	     android:id="@+id/deleteLocation"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignParentBottom="true"
	     android:layout_toEndOf="@+id/addLocation"
	     android:layout_toRightOf="@+id/addLocation"
	     android:paddingLeft="1sp"
	     android:paddingStart="1sp"
	     android:text="@string/deleteLocation"
	     android:textSize="12sp"
	     android:visibility="gone"
	     android:onClick="deleteNewLocation"/>
	 
</RelativeLayout>