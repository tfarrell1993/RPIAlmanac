<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    tools:context=".Map" >
		 <fragment
		     android:id="@+id/map"
		     android:layout_width="match_parent"
		     android:layout_height="match_parent"
		     android:name="com.google.android.gms.maps.MapFragment"/>
		 
		 <Button
		     android:id="@+id/addLocation"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_alignParentBottom="true"
		     android:layout_alignParentStart="true"
		     android:layout_alignParentLeft="true"
		     android:text="@string/addLocation"
		     android:textSize="12sp"
		     android:visibility="gone"
		     android:onClick="addNewLocation"/>
		 
		 <Button
		     android:id="@+id/deleteLocation"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_alignParentBottom="true"
		     android:layout_toEndOf="@+id/addLocation"
		     android:layout_toRightOf="@+id/addLocation"
		     android:paddingLeft="1sp"
		     android:paddingStart="1sp"
		     android:text="@string/deleteLocation"
		     android:textSize="12sp"
		     android:visibility="gone"
		     android:onClick="deleteNewLocation"/>
	</RelativeLayout>
	<LinearLayout
	    android:id="@+id/typeListView"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"
        android:orientation="vertical">
		 <RelativeLayout
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:padding="10dp">
		    <TextView 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:textSize="18sp"
		        android:textColor="#ffffff"
		        android:text="Academic"/>
		    <ToggleButton 
			    android:id="@+id/typeToggle1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:onClick="onTypeToggle"
			    android:checked="true"
			    android:layout_alignParentRight="true"/>
		</RelativeLayout>
		 <RelativeLayout
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:padding="10dp">
		    <TextView 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:textSize="18sp"
		        android:textColor="#ffffff"
		        android:text="Food"/>
		    <ToggleButton 
			    android:id="@+id/typeToggle2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:onClick="onTypeToggle"
			    android:checked="true"
			    android:layout_alignParentRight="true"/>
		</RelativeLayout>
		 <RelativeLayout
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:padding="10dp">
		    <TextView 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:textSize="18sp"
		        android:textColor="#ffffff"
		        android:text="Landmark"/>
		    <ToggleButton 
			    android:id="@+id/typeToggle3"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:onClick="onTypeToggle"
			    android:checked="true"
			    android:layout_alignParentRight="true"/>
		</RelativeLayout>
		 <RelativeLayout
		    android:layout_width="fill_parent" 
		    android:layout_height="wrap_content"
		    android:padding="10dp">
		    <TextView 
		        android:layout_width="wrap_content" 
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:textSize="18sp"
		        android:textColor="#ffffff"
		        android:text="University Buidling"/>
		    <ToggleButton 
			    android:id="@+id/typeToggle4"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:onClick="onTypeToggle"
			    android:checked="true"
			    android:layout_alignParentRight="true"/>
		</RelativeLayout>
	</LinearLayout>
</android.support.v4.widget.DrawerLayout>